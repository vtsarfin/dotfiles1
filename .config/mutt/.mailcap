# ~/.config/mutt/mailcap
#
# this uses the view_attachment script found in ~/.config/mutt/view_attachment.sh
#
# this is meant for an OS X system

# MS Excel
# this will use the default xls spreadsheet handler from open
application/x-msexcel; /Users/vts1/.config/mutt/view_attachment.sh %s
application/ms-exc; /Users/vts1/.config/mutt/view_attachment.sh %s
application/excel; /Users/vts1/.config/mutt/view_attachment.sh %s
application/msexcel; /Users/vts1/.config/mutt/view_attachment.sh %s
application/vnd.ms-exc; /Users/vts1/.config/mutt/view_attachment.sh %s
application/vnd.ms-excel; /Users/vts1/.config/mutt/view_attachment.sh %s

# MS Word
# use textedit to open .doc files as it's more light-weight
application/msword; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/TextEdit.app'

#
# for Star/OpenOffice stuff, use NeoOffice/J
#
# Star/Open Office Writer
application/vnd.sun.xml.writer; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.sun.xml.writer.global; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.stardivision.writer; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.stardivision.writer-global; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/x-starwriter; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.sun.xml.writer.template; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'

# Star/Open Office Calc
application/vnd.sun.xml.calc; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.stardivision.calc; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/x-starcalc; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.sun.xml.calc.template; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'

# Star/Open Office Draw
application/vnd.sun.xml.draw; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.stardivision.draw; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/x-stardraw; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.sun.xml.draw.template; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'

# Star/Open Office Math
application/vnd.sun.xml.math; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.stardivision.math; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/x-starmath; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'

application/vnd.sun.xml.writer; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'

# Star/Open Office Impress
application/x-starimpress; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.sun.xml.impress.template; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.sun.xml.impress; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.stardivision.impress; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'
application/vnd.stardivision.impress-packed; /Users/vts1/.config/mutt/view_attachment.sh %s "-" '/Applications/NeoOfficeJ.app'

# Images
image/jpeg; /Users/vts1/.config/mutt/view_attachment.sh %s
image/pjpeg; /Users/vts1/.config/mutt/view_attachment.sh %s
image/png; /Users/vts1/.config/mutt/view_attachment.sh %s
image/gif; /Users/vts1/.config/mutt/view_attachment.sh %s

# PDF
application/pdf; /Users/vts1/.config/mutt/view_attachment.sh %s pdf

# HTML
# -- always use lynx; it's gay to use safari for this
text/html; elinks -force-html %s

# Unidentified.
application/octet-stream; /Users/vts1/.config/mutt/view_attachment.sh %s "-" 
